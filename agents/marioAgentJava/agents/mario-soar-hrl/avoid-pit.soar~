sp {propose*avoid-pit
   (state <s> ^name mario-soar-hrl
              ^pit <p>)
   (<p> ^isdangerous yes)
-->
   (<s> ^operator <o> +)
   (<o> ^name avoid-pit
        ^pit <p>)
}
sp {pit*random*action
   (state <s> ^name avoid-pit
              ^pit <p>
              ^mario <mario>)
   (<p> ^isdangerous)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^direction right
        ^jump yes
        ^speed high)
}