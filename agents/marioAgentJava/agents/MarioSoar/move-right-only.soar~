sp {propose*move-right-only
   (state <s> ^name MarioSoar
              ^io.input-link.mario <m>)
   (<m> ^xi <x>
        ^yi <y>)
-->
   (<s> ^operator <o> +)
   (<o> ^name move-right-only)
}

sp {apply*move-right-only
   (state <s> ^operator <o>
              ^io <io>)
   (<io> ^output-link <out>)
   (<o> ^name move-right-only)
-->
   (<out> ^move <move>
          ^jump <j>)
   (<move> ^direction right)
   (<j> ^up no)
}
sp {apply*move-right-only*remove-move
   (state <s> ^operator.name move-right-only 
              ^io.output-link <out>)
   (<out> ^move <move>)
   (<move> ^status complete)
-->
   (<out> ^move <move> -)}

         
