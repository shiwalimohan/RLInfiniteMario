sp {mario*elaborate*tiles
   (state <s> ^io.input-link.visual-scene <ts>
              ^io.input-link.mario <mario>)
   (<mario> ^xi <mariox>
            ^yi <marioy>)
   (<ts> ^tile-row <tr>)
   (<tr> ^y  <ty>
         ^tile <t>)
   (<t> ^x <tx>)
-->
   (<tr> ^disty (- <marioy> <ty>))
   (<t> ^distx (- <mariox> <tx>))
}