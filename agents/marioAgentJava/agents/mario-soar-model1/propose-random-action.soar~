sp {move-to-goal*propose*action1
   (state <s> ^name mario-soar
              ^tile-type <tt>)
   (<tt> ^right |7|)
-->
   (<s> ^operator <op> +)
   (<op> ^name action
         ^direction right
         ^jump yes
         ^speed low)
}
sp {move-to-goal*propose*action2
   (state <s> ^name mario-soar
              ^tile-type <tt>)
   (<tt> ^right |\||)
-->
   (<s> ^operator <op> +)
   (<op> ^name action
         ^direction right
         ^jump yes
         ^speed low)
}
sp {move-to-goal*propose*action3
   (state <s> ^name mario-soar
              ^tile-type <tt>)
  - (<tt> ^right <<|7| |\||>>)
-->
   (<s> ^operator <op> +)
   (<op> ^name action
         ^direction right
         ^jump no
         ^speed low)
}

#walk to right
###############################################


sp {set*preference*one
   (state <s> ^name mario-soar
              ^operator <op1> +
              ^operator <op2> +)
   (<op1> ^name tackle-monster)
   (<op2> ^name action)
-->
   (<s> ^operator <op1> > <op2>)
}