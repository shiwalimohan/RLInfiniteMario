sp {propose*random*action
   (state <s> ^name mario-soar-insight
              ^rand-move <mv>
              ^rand-jump <jp>
              ^monster <m>)
   (<m> ^isthreat yes
        ^distx <dx>
        ^disty <dy>
        ^type <type>)
   (<mv> ^direction <d>)
   (<jp> ^up <j>)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^move <d>
        ^jump <j>)
}
sp {tackle*monster
   :template
   (state <s> ^operator <op> +
              ^monster <m>)
   (<m> ^type <t>
        ^distx <dx>
        ^disty <dy>
        ^isthreat yes)
   (<op> ^name action
         ^move <d>
         ^jump <j>)
--> 
   (<s> ^operator <op> = 0)
}