sp {mario*elaborate*monster
   (state <s> ^io.input-link.monsters.monster <m>
              ^name mario-soar-hrl)
   -(<m> ^type |Mario|)
-->
   (<s> ^monster <m>)
}
sp {mario*elaborate*monster2
   (state <s> ^monster <m>)
  -(<m> ^type |Fireball|)
   (<m> ^distx < 6
       ^disty < 7)
   -(<m> ^distx < -3)
   -(<m> ^disty < -3)
-->
   (<m> ^isthreat yes)
}
sp {mario*elaborate*monster3
   (state <s> ^name mario-soar-hrl
              ^monster <m>
              ^mario <mario>
              ^platform <p>)
   (<p> ^start <start>
        ^end <end>
        ^disty <pdisty>
        ^distyup <py>)
   (<m> ^isthreat yes
        ^x <mx> >= <start>)
   (<m> ^x <= <end>)
   (<m> ^y <py>)
-->
   (<m> ^isthreat no)
}


        