<project default="gluejar">
	<target name="jar" depends="compile">
		<mkdir dir="build"/>
		<jar destfile="build/infmario.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="com.mojang.mario.FrameLauncher"/>
			</manifest>
		</jar>
	</target>
	<target name="gluejar" depends="compile">
		<mkdir dir="build"/>
		<jar destfile="build/glue_infmario.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="edu.rutgers.rl3.comp.GlueMarioParameters"/>
			</manifest>
		</jar>
	</target>

	<target name="compile">
		<mkdir dir="bin"/>
		<copy todir="bin">
			<fileset dir="res"
			           includes="**/*"
			/>
		</copy>
		<javac srcdir="src" destdir="bin">
            <classpath>
                <pathelement location="RLVizLib.jar"/>
            </classpath>
        </javac>
	</target>

    <target name="clean">
        <delete dir="build"/>
        <delete dir="bin"/>
    </target>

</project>
