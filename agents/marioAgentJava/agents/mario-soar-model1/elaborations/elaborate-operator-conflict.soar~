sp {elaborate*operator-tie*in*tackel-monster
   (state <s> ^impasse conflict
              ^superstate <ss>
              ^attribute operator)
   (<ss> ^name tackle-monster)
-->
   (<s> ^name selection)
}

sp {selection*propose*evaluate-operator
   :default
   (state <s> ^name selection
              ^item <i>)
 -{(state <s> ^evaluation <e>)
   (<e> ^operator <i>
        ^value true)}
   -->
   (<s> ^operator <o> +, =)
   (<o> ^name evaluate-operator
        ^operator <i>)
}



