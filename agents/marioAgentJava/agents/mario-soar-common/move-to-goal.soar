sp {propose*move-to-goal
   (state <s> ^name mario-soar-common
             ^mario <mario>)
-->
   (<s> ^operator <o> + <)
   (<o> ^name move-to-goal)
}

sp {move-right-general
   :template
   (state <s> ^name mario-soar-common
              ^operator <op> +
              ^mario <m>)
   (<op> ^name move-to-goal)
-->
   (<s> ^operator <op> = 0)
}

sp {move-to-goal*propose*action1
   (state <s> ^name move-to-goal
              ^tile-type <tt>
              ^rand-move <mv>
              ^rand-jump <jp>
              ^rand-speed <sp>
              ^mario <mario>)
   (<jp> ^up <j>) 
   (<mario> ^yi <my>)
   (<mv> ^direction <d>)
   (<sp> ^degree <sd>)
-->
   (<s> ^operator <op> +)
   (<op> ^name action
         ^direction <d>
         ^jump <j>
         ^speed <sd>)
}

sp {move-to-goal*action
   :template
   (state <s> ^name move-to-goal
              ^operator <op> +
              ^tile-type.right <t>
              ^mario <mario>)
   (<mario> ^type <mtype>)
   (<op> ^name action
         ^direction <d>
         ^jump <j>
         ^speed <sp>)
-->
   (<s> ^operator <op> = 0)
}

