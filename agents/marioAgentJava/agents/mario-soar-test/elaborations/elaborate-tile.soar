sp {mario*elaborate*xright
   (state <s> ^io.input-link.mario.xi <x>)
-->
   (<s> ^xtile.right (+ <x> 1))
}
sp {mario*elaborate*tile-on-right
   (state <s> ^io.input-link <il>
              ^xtile.right <xloc>)
   (<il> ^mario <mario>
         ^visual-scene.tile-row <row>)
   (<mario> ^yi <y>)
   (<row> ^y <y>
          ^tile <t>)
   (<t> ^x <xloc>
        ^type <ty>)
-->
   (<s> ^tile-type.right <ty>)
}
