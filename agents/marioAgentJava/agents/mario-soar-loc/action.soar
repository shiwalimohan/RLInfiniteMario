sp {propose*action
   (state <s> ^name mario-soar-loc
              ^io.input-link.mario <m>
              ^move <mv>
              ^jump <jp>)
   (<mv> ^direction <d>)
   (<m> ^xi <x>
        ^yi <y>)
   (<jp> ^up <j>)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^move <d>
        ^jump <j>)
}

sp {mario*rl
   :template
   (state <s> ^operator <op> +
              ^io.input-link.mario <mario>
              ^move <mv>)
   (<mario> ^xi <x>
            ^yi <y>)
   (<op> ^name action
         ^move <d>
         ^jump <ju>)
   (<mv> ^direction <d>
         ^initial <i1>)
-->
   (<s> ^operator <op> = <i1>)
}

sp {apply*action
   (state <s> ^operator <op>
              ^io.output-link <ol>)
   (<op> ^name action
         ^move <d>
         ^jump <ju>)
-->
   (<ol> ^jump <j>
         ^move <m>)
   (<j> ^up <ju>)
   (<m> ^direction <d>)
}


