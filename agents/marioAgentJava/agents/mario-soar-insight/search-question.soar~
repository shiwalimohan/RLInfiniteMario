sp {propose*search-question
   (state <s> ^name mario-soar-insight
              ^question <q>)
   (<q> ^isreachable yes)
-->
   (<s> ^operator <o> +)
   (<o> ^name search-question
        ^question <q>)
}
sp {set-pref*question*question
   (state <s> ^name mario-soar-insight
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name search-question
         ^question.distx <x1>)
   (<o2> ^name search-question
         ^question.distx > <x1>)
-->
   (<s> ^operator <o1> > <o2>)
}
sp {question*random*action
   (state <s> ^name search-question
              ^rand-move <mv>
              ^rand-jump <jp>)
   (<mv> ^direction <d>)
   (<jp> ^up <j>)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^direction <d>
        ^jump <j>)
}
sp {search-question
   :template
   (state <s> ^name search-question
              ^operator <op> +
              ^question <q>)
   (<q> ^distx <dx>
        ^disty <dy>
        ^isreachable yes)
   (<op> ^name action
         ^direction <d>
         ^jump <j>)
--> 
   (<s> ^operator <op> = 0)
}