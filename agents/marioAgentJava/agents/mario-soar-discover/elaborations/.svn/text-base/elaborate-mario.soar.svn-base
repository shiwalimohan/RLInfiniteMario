sp {mario*elaborate*mario
   (state <s> ^io.input-link.mario <mario>
              ^name mario-soar-discover)
-->
   (<s> ^mario <mario>)
}

sp {mario*elaborate*xright
   (state <s> ^mario <mario>)
   (<mario> ^xi <x>
        ^yi <y>)
-->
   (<mario> ^xtile <xt>)
   (<xt> ^right (+ <x> 1)
         ^left (- <x> 1)
         ^centre <x>)
}

sp {mario*elaborate*tile-on-right
   (state <s> ^io.input-link <il>
              ^mario <mario>)
   (<mario> ^yi <y>
            ^xtile.right <xloc>)
   (<il> ^visual-scene.tile-row <row>)
   (<row> ^y <y>
          ^tile <t>)
   (<t> ^x <xloc>
        ^type <ty>)
-->
   (<mario> ^tile-on-right <ty>)
}