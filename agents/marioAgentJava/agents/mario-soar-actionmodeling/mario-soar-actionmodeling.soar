#------------------intialize-agent------------------------------------------------------

sp {nil*propose*initialize-mario-soar
   (state <s> ^superstate nil
             -^name)
-->
   (<s> ^operator <o> +)
   (<o> ^name initialize-mario-soar)
}

sp {nil*apply*initialize-mario-soar
   (state <s> ^operator <op>)
   (<op> ^name initialize-mario-soar)
-->
   (<s> ^name mario-soar
        ^rand-move <m>
	^desired <d>)
   (<m> ^direction left
   	^direction right
        ^direction nil
 	^jump yes
 	^jump no
 	^speed low
        ^speed high)
   (<d> ^better higher)
}


