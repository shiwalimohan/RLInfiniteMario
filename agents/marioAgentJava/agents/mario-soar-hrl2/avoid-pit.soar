sp {propose*avoid-pit
   (state <s> ^name mario-soar-hrl
              ^pit <p>)
   (<p> ^isdangerous yes)
-->
   (<s> ^operator <o> +)
   (<o> ^name avoid-pit
        ^pit <p>)
}
sp {pit*random*action
   (state <s> ^name avoid-pit
              ^pit <p>
              ^mario <mario>)
   (<p> ^dist-start <ds>
        ^width <w>)
   (<mario> ^yi <y>
            ^xi <x>)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^direction right
        ^jump up
        ^speed high)
}
sp {avoid-pit
   :template
   (state <s> ^name avoid-pit
              ^operator <op> +
              ^pit <p>
              ^tile-type.right <right>)
   (<op> ^name action
         ^direction <d>
         ^jump <j>
         ^speed <sd>)
   (<p> ^dist-start <dx>
        ^width <w>
        ^isdangerous yes)
--> 
   (<s> ^operator <op> = 0)
}
