sp {propose*tackle-monster
   (state <s> ^name mario-soar
              ^monster <m>)
   (<m> ^isthreat yes)
  -(<m> ^isthreat no)
-->
   (<s> ^operator <o> +)
   (<o> ^name tackle-monster
        ^monster <m>)
}

sp {set*flag
   (state <s> ^name tackle-monster)
-->
   (<s> ^stage prediction)
}

sp {monster*random*action
   (state <s> ^name tackle-monster
              ^rand-move <mv>
              ^rand-jump <jp>
              ^rand-speed <sp>
              ^monster <m>
              ^mario <mario>
              ^stage action)
   (<m> ^distx <dx>
        ^disty <dy>)
   (<jp> ^up <j>) 
   (<mario> ^yi <my>)
   (<mv> ^direction <d>)
   (<sp> ^degree <sd>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name action
        ^direction <d>
        ^jump <j>
        ^speed <sd>)
}

