#-------------source all prelevant files-------------------------------------------------
source all.soar
source mario-elaboration.soar

#------------------intialize-agent------------------------------------------------------

sp {nil*propose*initialize-mario-soar
   (state <s> ^superstate nil
             -^name)
-->
   (<s> ^operator <o> +)
   (<o> ^name initialize-mario-soar)
}

sp {nil*apply*initialize-mario-soar
   (state <s> ^operator <op>)
   (<op> ^name initialize-mario-soar)
-->
   (<s> ^name mario-soar
        ^rand-move <m>)
   (<m> ^direction left)
   (<m> ^direction right)
   (<m> ^direction nil)
   (<m> ^jump yes)
   (<m> ^jump no)
   (<m> ^speed low)
   (<m> ^speed high)
}


