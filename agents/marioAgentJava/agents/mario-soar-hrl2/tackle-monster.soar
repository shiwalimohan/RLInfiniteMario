sp {propose*tackle-monster
   (state <s> ^name mario-soar-hrl
              ^monster <m>)
   (<m> ^isthreat yes)
  -(<m> ^isthreat no)
-->
   (<s> ^operator <o> +)
   (<o> ^name tackle-monster
        ^monster <m>)
}
sp {tackle*monster*general
   :template
   (state <s> ^name mario-soar-hrl
              ^operator <op> +)
   (<op> ^name tackle-monster
         ^monster <m>)
   (<m> ^type <mt>
        ^distx <dx>
        ^disty <dy>
        ^sx <sx>
        ^sy <sy>
        ^winged <w>)
-->
   (<s> ^operator <op> = 0)
}
sp {monster*random*action
   (state <s> ^name tackle-monster
              ^rand-move <mv>
              ^rand-jump <jp>
              ^rand-speed <sp>
              ^monster <m>
              ^mario <mario>)
   (<m> ^distx <dx>
        ^disty <dy>
        ^sx <spx>
        ^sy <spy>)
   (<jp> ^up <j>) 
   (<mario> ^xi <mx>
            ^yi <my>)
   (<mv> ^direction <d>)
   (<sp> ^degree <sd>)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^direction <d>
        ^jump <j>
        ^speed <sd>)
}
sp {tackle*monster
   :template
   (state <s> ^name tackle-monster
              ^operator <op> +
              ^monster <m>
              ^mario.type <mt>)
   (<op> ^name action
         ^direction <d>
         ^jump <j>
         ^speed <sp>)
   (<m> ^type <t>
        ^distx <dx>
        ^disty <dy>
        ^winged <w>
        ^isthreat yes)
--> 
   (<s> ^operator <op> = 0)
}
