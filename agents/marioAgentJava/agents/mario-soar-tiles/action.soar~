sp {propose*action
   (state <s> ^name mario-soar-tiles
              ^io.input-link.mario <m>
              ^move <mv>
              ^jump <jp>)
   (<m> ^xi <x>
        ^yi <y>)
   (<mv> ^direction <d>)
   (<jp> ^up <j>)

-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^move <d>
        ^jump <j>)
}

sp {mario*rl
   :template
   (state <s> ^operator <op> +
              ^io.input-link.tiles-set <ts>
              ^move <mv>)
   (<op> ^name action
         ^move <d>
         ^jump <ju>)
   (<mv> ^direction <d>
         ^initial <i1>)
   (<ts> ^<set> <tile-set>)
   (<tile-set> ^<tile> <char>)
-->
   (<s> ^operator <op> = <i1>)
}

sp {apply*action
   (state <s> ^operator <op>
              ^io.output-link <ol>)
   (<op> ^name action
         ^move <d>
         ^jump <ju>)
-->
   (<ol> ^jump <j>
         ^move <m>)
   (<j> ^up <ju>)
   (<m> ^direction <d>)
}
