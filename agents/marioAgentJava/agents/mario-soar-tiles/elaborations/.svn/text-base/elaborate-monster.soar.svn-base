sp {mario*elaborate*monster
   (state <s> ^io.input-link.monsters.monster <m>
              ^name mario-soar-tiles
              ^io.input-link.mario <mario>)
   (<m> ^x <monsterx>
        ^y <monstery>)
   (<mario> ^xi <mariox>
            ^yi <marioy>)
-->
   (<m> ^distx (- <mariox> <monsterx>)
        ^disty (- <marioy> <monstery>))
}
sp {mario*elaborate*monster2
   (state <s> ^io.input-link.monsters.monster <m>)
  -(<m> ^type |Fireball|)
   (<m> ^distx < 4
       ^disty < 5)
   -(<m> ^distx < -3)
   -(<m> ^disty < -6)
-->
   (<m> ^isthreat yes)
}