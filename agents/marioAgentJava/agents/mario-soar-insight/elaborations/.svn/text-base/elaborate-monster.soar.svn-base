sp {mario*elaborate*monster
   (state <s> ^io.input-link <il>)
   (<il> ^mario <mario>
         ^monster <m>)
   (<mario> ^xi <mariox>
            ^yi <marioy>)
   (<m> ^type <t>
        ^x <mx>
        ^y <my>)
-->
   (<s> ^monster <m1>)
   (<m1> ^type <t>
         ^distx (- <mx> <mariox>)
         ^disty (- <my> <marioy>))
}
sp {mario*elaborate*monster2
   (state <s>  ^monster <m1>)
  - (<m1> ^type <<|Mushroom| |Fire Flower|>>)
   (<m1> ^distx < 5
         ^disty < 2)
   -(<m1> ^distx < -3)
   -(<m1> ^disty < -2)
-->
   (<m1> ^isthreat yes)
}